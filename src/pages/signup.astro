---
import Layout from '../layouts/Layout.astro';
import AriaSubmitButton from '../components/AriaSubmitButton.jsx';
import AriaTextField from '../components/AriaTextField.jsx';

---
<Layout title="Sign Up">
    <h1>Sign Up</h1>
    <form>
        <div>
          <AriaTextField label="First Name" id="first-name" type="text" />
        </div>
    
        <div>
          <AriaTextField label="Last Name" id="last-name" type="text" />
        </div>
    
        <div>
          <AriaTextField label="Email" id="email" type="email" placeholder="Email"/>
        </div>
    
        <div>
          <AriaTextField label="Password" id="password" type="password" description="Must be at least 8 characters." />
        </div>
    
        <div>
          <AriaTextField label="Confirm Password" id="confirm-password" type="password" description="Please re-enter your password." />
        </div>
    
        <AriaSubmitButton client:load />
      </form>
</Layout>